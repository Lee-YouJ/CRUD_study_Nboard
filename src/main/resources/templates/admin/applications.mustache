{{> layouts/header}}
<h1>신청자 목록</h1>
<table class="table table-striped">
    <thead>
    <tr>
        <th>신청자</th>
        <th>스터디</th>
        <th>상태</th>
        <th>관리</th>
    </tr>
    </thead>
    <tbody>
    {{#applications}}
        <tr>
            <td>{{username}}</td>
            <td><a href="/admin/{{studyPost.id}}">{{studyPost.title}}</a></td>
            <td>{{status}}</td>
            <td>
                {{^isApprovalCheck}}
                    <form action="/admin/applications/{{id}}/approve" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">승인</button>
                    </form>
                    <form action="/admin/applications/{{id}}/reject" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">거절</button>
                    </form>
                {{/isApprovalCheck}}
            </td>
        </tr>
    {{/applications}}
    {{^applications}}
        <tr><td colspan="4">신청이 없습니다.</td></tr>
    {{/applications}}
    </tbody>
</table>
<br>
<button onclick="location.href='/admin/list'" class="btn btn-primary">목록으로 돌아가기</button>

{{> layouts/footer}}