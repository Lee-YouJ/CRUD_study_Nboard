{{>layouts/header}}

<h2>
    {{post.title}}
    {{#post.studyType}}
        <span class="badge bg-secondary" style="font-size: 0.8rem;">{{.}}</span>
    {{/post.studyType}}
</h2>

<p>{{post.content}}</p>

<table class="table">
    <tbody>
    <tr>
        <th scope="row">수업 종류</th>
        <td>{{courseType}}</td>
    </tr>
    <tr>
        <th scope="row">마감일</th>
        <td>{{post.deadline}}</td>
    </tr>
    <tr>
        <th scope="row">수업 요일</th>
        <td>{{post.weekdayOrWeekend}}</td>
    </tr>
    </tbody>
</table>

<div style="display: flex; gap: 10px;">
    <form method="post" action="/study/{{post.id}}/apply">
        <button type="submit">스터디 신청하기</button>
    </form>
    <button onclick="location.href='/study'">목록으로 돌아가기</button>
</div>

{{>layouts/footer}}

<style>
    .table th {
        width: 150px; /* 필요에 따라 너비 조정 */
    }
</style>